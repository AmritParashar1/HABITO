<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:id="@+id/greetingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, DJ ðŸ‘‹"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's find your cozy place to stay"
            android:textColor="#666"
            android:paddingTop="4dp" />

        <!-- Location -->
        <EditText
            android:id="@+id/locationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"

            android:padding="12dp"

            android:layout_marginTop="16dp" />

        <!-- Date and Guests -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:weightSum="2">

            <EditText
                android:id="@+id/dateInput"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:padding="12dp" />


            <EditText
                android:id="@+id/guestsInput"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Guests"

                android:padding="12dp"

                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Search Button -->
        <Button
            android:id="@+id/searchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search"
            android:layout_marginTop="16dp"
            android:backgroundTint="#2196F3" />

        <!-- Popular cities -->
        <TextView
            android:text="Popular cities"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Add a horizontal RecyclerView for cities if needed -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popularCitiesRecycler"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />


        <!-- Favorite places -->
        <TextView
            android:text="Favorite places to holiday"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Add a horizontal RecyclerView for places -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favoritePlacesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            android:overScrollMode="never"
            android:clipToPadding="false"
            tools:listitem="@layout/item_place" />
    </LinearLayout>
</ScrollView>
